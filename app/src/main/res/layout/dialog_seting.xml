<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_centerInParent="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/dialog_botom"
        android:orientation="vertical">

        <LinearLayout

            android:id="@+id/lin_dia_on"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/dialog_botom"
            android:orientation="horizontal"
            android:padding="5dp">

            <ImageView
                android:id="@+id/img_dialg_on"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_weight="1"
                app:srcCompat="@drawable/ic_fill_4"
                tools:ignore="VectorDrawableCompat" />

            <TextView
                android:id="@+id/txt_on"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/sarabun_bold"
                android:gravity="center_horizontal"
                android:padding="10dp"
                android:text="@string/on"
                android:textColor="@color/hashtagfolow"
                android:textSize="15sp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/sarabun_bold"
                android:padding="10dp"
                android:text="@string/on"
                android:textColor="@color/loctitle"
                android:textSize="15sp"
                android:visibility="invisible" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:background="@color/msgview" />

        <LinearLayout
            android:visibility="gone"
            android:id="@+id/lin_dia_wifi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/dialog_botom"
            android:orientation="horizontal"
            android:padding="5dp">

            <ImageView
                android:visibility="invisible"
                android:id="@+id/img_dialg_wifi"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_weight="1"
                app:srcCompat="@drawable/ic_fill_4"
                tools:ignore="VectorDrawableCompat" />

            <TextView
                android:id="@+id/txt_wifi"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/sarabun_bold"
                android:gravity="center_horizontal"
                android:padding="10dp"
                android:text="@string/whenwifi"
                android:textColor="@color/loctitle"
                android:textSize="15sp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/sarabun_bold"
                android:padding="10dp"
                android:text="@string/on"
                android:textColor="@color/loctitle"
                android:textSize="15sp"
                android:visibility="invisible" />
        </LinearLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:background="@color/msgview" />

        <LinearLayout
            android:id="@+id/lin_dia_off"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/dialog_botom"
            android:orientation="horizontal"
            android:padding="5dp">

            <ImageView
                android:visibility="invisible"
                android:id="@+id/img_dialg_off"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_weight="1"
                app:srcCompat="@drawable/ic_fill_4"
                tools:ignore="VectorDrawableCompat" />

            <TextView
                android:id="@+id/txt_off"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/sarabun_bold"
                android:gravity="center_horizontal"
                android:padding="10dp"
                android:text="@string/off"
                android:textColor="@color/loctitle"
                android:textSize="15sp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/sarabun_bold"
                android:padding="10dp"
                android:text="@string/on"
                android:textColor="@color/loctitle"
                android:textSize="15sp"
                android:visibility="invisible" />
        </LinearLayout>

    </LinearLayout>
</RelativeLayout>