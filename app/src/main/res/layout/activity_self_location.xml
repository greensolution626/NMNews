<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".activity.SelfLocationActivity">

    <TextView
        android:id="@+id/txt_city"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="160dp"
        android:fontFamily="@font/sarabun_bold"
        android:text="Jaipur"
        android:textColor="@color/loctitle"
        android:textSize="28dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|center_horizontal"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/sarabun_regular"
            android:text="Do you want to continue with "
            android:textColor="@color/locsubtitle"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/txt_subcity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:fontFamily="@font/sarabun_bold"
            android:text="jaipur "
            android:textColor="@color/locsubtitle"
            android:textSize="20dp" />
    </LinearLayout>

    <Button

        android:textSize="18sp"
        android:id="@+id/but_self_yes"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_gravity="center_vertical|center_horizontal"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="55dp"
        android:layout_marginRight="35dp"
        android:background="@drawable/buroncorner"
        android:text="Yes"
        android:textAllCaps="false"
        android:textColor="@color/white" />

    <Button
        android:textSize="18sp"
        android:id="@+id/but_self_no"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="35dp"
        android:background="@drawable/buroncornerwithoutcolour"
        android:text="@string/locbut1"
        android:textAllCaps="false"
        android:textColor="@color/loctitle" />
</LinearLayout>