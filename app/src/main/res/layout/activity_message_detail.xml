<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".activity.MessageDetailActivity">

    <RelativeLayout
        android:id="@+id/lin_msgdetail_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/rel_msgdetail_profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/iamge_back_msgdetail"
                android:layout_width="40dp"
                android:layout_height="35dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:background="?android:attr/selectableItemBackground"
                app:srcCompat="@drawable/ic_iconly_light_arrow___left__2_"
                tools:ignore="VectorDrawableCompat" />

            <ImageView
                android:id="@+id/img_mesge"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="22dp"
                android:layout_marginBottom="15dp"
                android:layout_toRightOf="@+id/iamge_back_msgdetail"
                android:src="@drawable/searchimage" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="15dp"
                android:layout_toRightOf="@+id/img_mesge"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txt_chatwith"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/sarabun_bold"
                        android:singleLine="true"
                        android:text="Ramesh Kumar"
                        android:textColor="@color/loctitle"
                        android:textSize="18sp" />
                </RelativeLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text="@string/profileid"
                    android:textColor="@color/locsubtitle"
                    android:textSize="14sp" />


            </LinearLayout>
        </RelativeLayout>


        <ImageView
            android:id="@+id/img_msg_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:background="?android:attr/selectableItemBackground"
            app:srcCompat="@drawable/ic_group_7849"
            tools:ignore="VectorDrawableCompat" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/rel_msgdetail_profile"
            android:layout_marginLeft="18dp"
            android:layout_marginRight="13dp"
            android:background="@color/msgview" />
    </RelativeLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recy_mesage_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginTop="10dp"
        android:layout_marginBottom="60dp"
        android:clickable="true"
        android:focusable="true"
        android:orientation="horizontal"
        android:scrollbars="none"
        android:visibility="gone" />

    <ScrollView
        android:id="@+id/scollview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/rel_bottom_msg"
        android:layout_below="@+id/lin_msgdetail_top">

        <LinearLayout
            android:layout_marginTop="10dp"
            android:id="@+id/lin_mainlayouyt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp" />
    </ScrollView>


    <RelativeLayout
        android:id="@+id/rel_bottom_msg"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_alignParentBottom="true"
        android:layout_gravity="end|bottom"
        android:layout_marginBottom="5dp"
        android:background="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="18dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="15dp"
            android:layout_toLeftOf="@+id/img_send"
            android:background="@drawable/searchtopbar"
            android:padding="10dp">

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/edit_msgarea"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:fontFamily="@font/sarabun_regular"
                android:hint="@string/typeamessage"
                android:paddingLeft="5dp"
                android:textColor="@color/locsubtitle"
                android:textColorHint="@color/locsubtitle" />

        </LinearLayout>

        <ImageView
            android:id="@+id/img_send"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="13dp"
            app:srcCompat="@drawable/ic_group_7901"
            tools:ignore="VectorDrawableCompat" />
    </RelativeLayout>
</RelativeLayout>