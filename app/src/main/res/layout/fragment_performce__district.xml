<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".fragment.Performce_DistrictFragment">

    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/uploaddoc"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/sarabun_bold"
                android:singleLine="true"
                android:text="Jaipur"
                android:textColor="@color/loctitle"
                android:textSize="20sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/sarabun_regular"
                android:singleLine="true"
                android:text="@string/dumytext"
                android:textColor="@color/locsubtitle"
                android:textSize="15sp" />
        </LinearLayout>


        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|center_vertical"
            android:layout_weight="0.5"
            android:fontFamily="@font/sarabun_bold"
            android:gravity="center_horizontal"
            android:singleLine="true"
            android:text="24"
            android:textColor="@color/loctitle"
            android:textSize="22sp" />
    </LinearLayout>



        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recy_perf_district"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
android:paddingHorizontal="10dp"
            android:scrollbars="none" />

</LinearLayout>