<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="?android:attr/selectableItemBackground"
    android:orientation="vertical">

    <LinearLayout
        android:layout_marginRight="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/image_search_profile"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="center_horizontal|center_vertical"
            android:layout_marginTop="5dp"
            android:src="@drawable/profileimage" />

        <TextView
            android:id="@+id/user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|center_vertical"
            android:fontFamily="@font/sarabun_bold"
            android:singleLine="true"
            android:text="@string/hometitle"
            android:textColor="@color/locsubtitle"
            android:textSize="16sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|center_vertical"
            android:fontFamily="@font/sarabun_regular"
            android:singleLine="true"
            android:text="12.5k Followers"
            android:textColor="@color/locsubtitle"
            android:textSize="14sp" />

        <RelativeLayout
            android:layout_marginBottom="10dp"
            android:layout_marginTop="5dp"
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:layout_gravity="center_horizontal|center_vertical"
            android:background="@drawable/usersitem"
            android:orientation="vertical"
            >

            <TextView
                android:textAllCaps="true"
                android:layout_centerInParent="true"
                android:gravity="center_horizontal|center_vertical"
                android:id="@+id/hashtag_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center_vertical"
                android:fontFamily="@font/sarabun_semibold"
                android:text="@string/follow"
                android:textColor="@color/white"
                android:textSize="13dp" />

        </RelativeLayout>
    </LinearLayout>
</LinearLayout>