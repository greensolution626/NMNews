<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="vertical"
    tools:context=".activity.RecordingPreviewActivity">

    <ImageView
        android:id="@+id/iamge_back_video_preview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="?android:attr/selectableItemBackground"
        android:padding="30dp"
        app:srcCompat="@drawable/ic_group_7874"
        tools:ignore="VectorDrawableCompat" />

    <VideoView
        android:id="@+id/vid_view"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_below="@+id/iamge_back_video_preview"
        android:layout_centerInParent="true"
        android:fitsSystemWindows="true" />

    <Button
        android:id="@+id/button_save"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_vertical|center_horizontal"
        android:layout_marginBottom="50dp"
        android:background="@drawable/locationborderitemwithred"
        android:text="Save"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:visibility="gone" />
</RelativeLayout>